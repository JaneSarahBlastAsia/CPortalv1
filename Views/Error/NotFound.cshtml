@{
    ViewData["Title"] = "404 - Page Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="error-code">404</div>
<h1 class="h2 mb-3">Page Not Found</h1>
<p class="error-message mb-4">The page you're looking for doesn't exist or has been moved.</p>

<div class="mb-4">
    <a href="/" class="btn btn-primary btn-lg mr-3">Go Home</a>
    <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">Go Back</button>
</div>

<div class="mt-4">
    <small class="text-muted">
        If you believe this is an error, please contact support.
    </small>
</div>
